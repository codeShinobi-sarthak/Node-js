<html lang="en">
    <%- include("./partials/head.ejs") %>
    <body>
        <%- include("./partials/nav.ejs") %>

        <div class="container">
            <h1>All Blogs</h1>
            <% if(blogs.length > 0){ blogs.forEach(blog => { %>
            <div class="blog-post">
                <h2><%= blog.title %></h2>
                <p><%= blog.content %></p>
            </div>
            <% })} else { %>
            <h1>No blogs to display</h1>
            <% } %>
        </div>

        <%- include("./partials/footer.ejs") %>
    </body>
</html>
