<html lang="en">
    <%- include("./partials/head.ejs") %>
    <body>
        <%- include("./partials/nav.ejs") %>

        <div class="container">
            <h1>Write a New Blog Post</h1>
            <form
                action="/new-blog"
                method="POST"
                class="blog-form">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input
                        type="text"
                        id="title"
                        name="title"
                        required />
                </div>
                <div class="form-group">
                    <label for="content">Content:</label>
                    <textarea
                        id="content"
                        name="content"
                        rows="8"
                        required></textarea>
                </div>
                <button
                    type="submit"
                    class="btn">
                    Submit Post
                </button>
            </form>
        </div>

        <%- include("./partials/footer.ejs") %>
    </body>
</html>
